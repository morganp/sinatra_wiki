<h1>Editing <%= @page.name %></h1>

<form method="POST">
  <input type="text" name="title" value="<%= @page.name %>" id="title" />
  <br>
  <textarea name="body" rows="40" cols="100" style="font-family: Consolas; font-size: 13px"><%= @page.body %></textarea>
  <br>
  <input type="submit" name="Enviar" value="Create/Update" id="Enviar" accesskey="s" />
  <a href="/<%= @page.name %>" accesskey="c">Cancel</a>
</form>
